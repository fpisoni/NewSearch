{

  "manifest_version": 2,
  "name": "Newsearch",
  "version": "1.4",
  "description": "Adds buttons to look for related news in diarioregistrado",

  "icons": {
    "18": "icons/lupa_18dp.png",
    "24": "icons/lupa_24dp.png",
    "36": "icons/lupa_36dp.png",
    "48": "icons/lupa_48dp.png"
  },

  "permissions": [
  	"<all_urls>",
  	"webRequest"
  ],

  "background": {
      "scripts":["background/background-script.js"]
    },

  "content_scripts":[
    {
      "matches": ["https://*.wikipedia.org/wiki/*"],
      "js": ["content_script/content-script.js"],
      "css": ["style/popup-style.css"]
    }
	]
}